@model GeoSearch.Models.FoursquarePlaceImagesModel

@if (Model != null && Model.Images != null  && Model.Images.Count > 0)
{
    @foreach (var image in Model.Images)
    {
        <div class="card border-secondary bg-secondary-custom text-secondary tall">
            <div class="card-body" style="height: 100%">
                <h5 class="card-title"><i class="fas fa-camera"></i> Photo</h5>
                <div class=" d-flex flex-column justify-content-between" style="height: 90%">
                    <div style="width: 100%; height: @(@image.Tip == null ? "90%" : "50%")">
                        <img src="@($"{image.Prefix}250x250{image.Suffix}")" alt="@($"Image {@image.Id}")" class="image-card" />
                    </div>

                    <div>
                        @if (image != null && image.Tip != null)
                        {
                            @image.Tip.Text
                            <p><i class="fas fa-globe fa-lg"></i> <a href="@image.Tip.Url" target="_blank">@image.Tip.Url</a></p>
                        }

                        @if (image != null && image.Classifications != null && image.Classifications.Count > 0)
                        {
                            @foreach (var classification in image.Classifications)
                            {
                                <span class="badge bg-secondary">@classification</span>
                            }
                        }

                        @if (image != null)
                        {
                            <div style="display: flex; justify-content: space-between;">
                                <div>
                                    @if (image.Created_At != default(DateTime))
                                    {
                                        <i>@image.Created_At.ToString("MMMM dd, yyyy")</i>
                                    }
                                </div>
                                <div>
                                    <i class="fas fa-thumbs-up"></i> @(image.Tip != null ? @image.Tip.Agree_Count : "0")
                                    <i class="fas fa-thumbs-down"></i> @(image.Tip != null ? @image.Tip.Disagree_Count : "0")
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="card border-secondary bg-secondary-custom text-secondary">
        <div class="card-body">
            <p>No images found for this place.</p>
        </div>
    </div>
}
