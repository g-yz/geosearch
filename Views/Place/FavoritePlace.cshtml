@model List<GeoSearch.Data.FavoritePlace>

@{
    ViewData["Title"] = "Favorite Places";
}

<div class="main-container">
    <h1>@ViewData["Title"]</h1>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Place Name</th>
                    <th>Address</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var place in Model)
                {
                    <tr>
                        <td>@place.Name</td>
                        <td>@place.Address</td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center align-items-center">
                                <a class="btn btn-primary btn-sm me-2" href="/Place/Details/@place.FsqId">
                                    <i class="fas fa-eye"></i> View
                                </a>

                                <form method="post" asp-action="RemoveFavorite">
                                    <input type="hidden" name="fsqId" value="@place.FsqId" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i> Remove
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No favorite places found.</p>
    }
</div>
